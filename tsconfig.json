{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,
    "jsx": "react-native",
    "noEmit": false,
    "noEmitOnError": false,
    "paths": {
      "react-native": ["./example/node_modules/react-native"],
      "react": ["./example/node_modules/react"]
    },
    "typeRoots": ["./example/node_modules/@types"]
  },
  "include": ["src/**/*"]
}
